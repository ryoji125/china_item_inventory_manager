<p id="notice"><%= notice %></p>

<h1>Reserches</h1>

<table>
  <thead>
    <tr>
      <th>Japan image url</th>
      <th>Japan title</th>
      <th>Japan url</th>
      <th>Japan description</th>
      <th>Japan price</th>
      <th>China image url</th>
      <th>China title</th>
      <th>China url</th>
      <th>China price</th>
      <th>Item</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reserches.each do |reserch| %>
      <tr>
        <td><%= reserch.japan_image_url %></td>
        <td><%= reserch.japan_title %></td>
        <td><%= reserch.japan_url %></td>
        <td><%= reserch.japan_description %></td>
        <td><%= reserch.japan_price %></td>
        <td><%= reserch.china_image_url %></td>
        <td><%= reserch.china_title %></td>
        <td><%= reserch.china_url %></td>
        <td><%= reserch.china_price %></td>
        <td><%= reserch.item %></td>
        <td><%= reserch.user %></td>
        <td><%= link_to 'Show', reserch %></td>
        <td><%= link_to 'Edit', edit_reserch_path(reserch) %></td>
        <td><%= link_to 'Destroy', reserch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

