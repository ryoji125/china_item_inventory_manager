<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "個の入力不足があります。") %></h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-6 col-md-offset-3">
  <div class="field">
    <%= form.label :name, class:"inline_form"%><p class="smoll_required inline_form">*必須</p>
    <%= form.text_field :name, class:"form-control"%>
  </div>

  <div class="field">
    <%= form.label :employee_number %>
    <%= form.text_field :employee_number, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :line_id %>
    <%= form.text_field :line_id, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :email, class:"inline_form"%><p class="smoll_required inline_form">*必須</p>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :address, class:"inline_form"%><p class="smoll_required inline_form">*必須</p>
    <%= form.text_field :address, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :phone_number, class:"inline_form"%><p class="smoll_required inline_form">*必須</p>
    <%= form.telephone_field :phone_number, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :password, class:"inline_form"%><p class="smoll_required inline_form">*必須</p>
    <%= form.password_field :password, class:"form-control" %>
  </div>

  <div class="field">
  <%= form.label :password_confirmation, class:"inline_form"%><p class="smoll_required inline_form">*必須</p>
    <%= form.password_field :password_confirmation, class:"form-control" %>
  </div>
  <p class="inline_form">あなたの雇用形態を選択してください(複数選択可)</p><p class="smoll_required inline_form">*必須</p>
  <div class="field　form-inline" >
  <label class="checkbox-inline"><%= form.check_box :inventory_manager_flg %>在庫管理</label>

  <label class="checkbox-inline"><%= form.check_box :reserch_user_flg %>リサーチ</label>
  </div>
  <div class="actions" id="action">
    <%= form.submit yield(:button_text), class:"btn btn-primary btn-block btn-#{yield(:class_text)}"%>
  </div>
  <p>✳︎アカウント作成後は、プロフィール編集でプロフィール画像を設定してください</p>
</div>

<% end %>