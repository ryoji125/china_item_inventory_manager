<section id="acdemo1">
	<div class="accordion1">
		&emsp; &emsp; &emsp; <p class="btn btn-primary btn-xs right style" "display:inline;">
			表示/非表示</p>

		<% if @items_find.present? %>
		<%= "検索件数#{@items_find.count}件です" %>
		<ul class="inner">
			<div class="kousin2">
				<table table border="1" class="table-back2">
					<thead>
						<tr>
							<th width="5">製品番号</th>
							<th width="100">商品タイトル</th>
							<th class="th-text" width="50" align="right">在庫数合計</th>
							<th class="th-text" width="50" align="right">日本コード</th>
							<th class="th-text" width="50" align="right">商品画像</th>
							<th class="th-text" width="50" align="right">原価</th>
						</tr>
					</thead>
			</div>
			<tbody>
				<% @items_find.each do |item| %>
				<% stockcount=item.stocks.sum(:stock)  %>
				<tr>
					<td><%= item.part_number %></td>
					<td text-align="right">
						<%= item.item_number%>
					</td>
					<td align="right"><%= item.stocks.sum(:stock)  %></td>
					<td align="right"><%= item.jan_code  %></td>
					<td align="right">
						<% if item.item_picture.present? %>
						<%= image_tag item.item_picture, :size =>'50x25' %>
						<% end %></td>
					<td align="right"><%= item.simulate_price.to_s(:delimited, delimiter: ',') %></td>
				</tr>
				<% end %>
			</tbody>
			</table>
		</ul>
		<% end %>
