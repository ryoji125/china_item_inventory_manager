  <h1>在庫編集</h1>
<% if @item.blank? %>
<% @item=Item.find(@stock.item_id) %>
<% end %>
<%= form_for(@stock, url:{controller:'stocks', action:'update'}) do |form| %>
<div class="row center">
  <div class="col-sm-12 col-md-12"></div>
  <div class="col-sm-12 col-md-12 lead">商品名：<%= @item.item_title %><br></div>
</div>
<div class="col-sm-2 col-md-3"></div>
<div class="col-sm-4 col-md-3">
  <div class="field">
    <%= form.label :仕入日 %>
    <%= form.date_select :inventory_arrival_date %>
  </div>
  <div class="field">
    <%= form.label :仕入原価 %>
    <%= form.number_field :purchase_price,id:"jsNum" %>
  </div>
  <div class="field">
    <%= form.label :仲介業者 %>
    <%= form.text_field :trader_name %>
  </div>
  <div class="field">
    <%= form.label :在庫数 %>
    <%= form.number_field :stock %>
  </div>
  <div class="field">
    <%= form.label :最低在庫数 %>
    <%= form.number_field :alert_border_line %>
  </div>
  <div class="field">
    <%= form.label :購入原価（円） %>
    <%= form.number_field :buy_item_to_jpy %>
  </div>
  <div class="field">
    <%= form.label :購入原価（中国元） %>
    <%= form.number_field :buy_item_to_cny %>
  </div>
</div>
<div class="col-sm-4 col-md-3">
  <div class="field">
    <p><b>仕入商品名</b></p>
    <%= @item.buy_item_title %>
  </div>
  <div class="field">
    <p><b>仕入商品URL</b></p>
    <%= @item.buy_item_url %>
  </div>
  <div class="field">
    <p><b>仕入商品画像</b></p>
    <img src="<%= @item.china_item_picture %>">
  </div>
  <div class="hidden">
    <%= form.hidden_field :item_id,value:@item.id %>
  </div>
</div>
<div class="col-sm-2 col-md-3"></div>

<div class="center">
  <div class="col-sm-12 col-md-12">
    <br>
    <%= form.submit "登録する", :class=> 'btn btn-primary', :size=>'10px', data: { confirm: '本当に登録しますか？' } %>
    <A HREF="javascript:history.back()" class='btn btn-primary'>キャンセル</A>
    <% end %>
  </div>
</div>